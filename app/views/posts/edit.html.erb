<h1>Edit your Post here</h1>

<%if flash[:errors] %>
<%flash[:errors].each do |error|%>
        <%=  error%>
        <%end%>
        <%end%>

<%=form_for @post do |f|%>
    <%=f.label :title%>
    <%=f.text_field :title%><br>
    <br>
    <%=f.label :content%>
    <%=f.text_field :content%><br>
    <br>
    <%=f.label :likes%>
    <%=f.number_field :likes%><br>
    <br>
    <%=f.submit%>
    <%end%>
